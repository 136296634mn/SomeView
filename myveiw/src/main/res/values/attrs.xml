<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titleText" format="string"/>
    <attr name="titleTextSize" format="dimension"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="image" format="reference"/>
    <attr name="scaleType" >
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>
    <attr name="firstColor" format="color"/>
    <attr name="secondColor" format="color"/>
    <attr name="thirdColor" format="color"/>
    <attr name="speed" format="integer"/>
    <attr name="circleWidth" format="dimension"/>
    <attr name="dotCount" format="integer"/>
    <attr name="splitSize" format="integer"/>
    <attr name="background" format="reference"/>
    <attr name="progress" format="integer"/>
    <attr name="graduationCount" format="integer"/><!--大刻度-->
    <attr name="secondGraduationCount" format="integer"/><!--2级刻度-->
    <attr name="centerText" format="string"/>
    <attr name="color" format="color"/>
    <attr name="lineColor" format="color"/>
    <attr name="gridLineColor" format="color"/>

    <declare-styleable name="CustomTitleView">
        <attr name="titleText"/>
        <attr name="titleTextSize"/>
        <attr name="titleTextColor"/>
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="titleText"/>
        <attr name="titleTextSize"/>
        <attr name="titleTextColor"/>
        <attr name="scaleType"/>
        <attr name="image"/>
    </declare-styleable>

    <declare-styleable name="MyLoadingView">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="thirdColor"/>
        <attr name="speed"/>
        <attr name="circleWidth"/>
    </declare-styleable>
    
    <declare-styleable name="MyVoiceControlView">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="background"/>
        <attr name="circleWidth"/>
        <attr name="dotCount"/>
        <attr name="splitSize"/>
    </declare-styleable>

    <declare-styleable name="CircleLoading">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="progress"/>

    </declare-styleable>
    
    <declare-styleable name="MyDialView">
        <attr name="color"/>
        <attr name="graduationCount"/>
        <attr name="secondGraduationCount"/>
        <attr name="centerText"/>
        <attr name="progress"/>
    </declare-styleable>

    <declare-styleable name="LinechartView">
        <attr name="lineColor"/>
        <attr name="gridLineColor"/>
        <attr name="background"/>
    </declare-styleable>

    <declare-styleable name="BattaryView">
        <attr name="battaryPercnet" format="integer"/>
        <attr name="color"/>
    </declare-styleable>

    <declare-styleable name="LineView">
        <attr name="currentColor" format="color"/>
        <attr name="tolerantColor" format="color"/>
        <attr name="lineColor"/>
        <attr name="lowValue" format="integer"/>
        <attr name="highValue" format="integer"/>
        <attr name="currentValue" format="integer"/>
        <attr name="lineHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ImgWheelView">
        <attr name="checkedColor" format="color"/>
        <attr name="unCheckedColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MsgBubbleView">
        <attr name="color"/>
        <attr name="textColor" format="color"/>
        <attr name="centerText"/>
        <attr name="bubbleRadius" format="dimension"/>
    </declare-styleable>

</resources>